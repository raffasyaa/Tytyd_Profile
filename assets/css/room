mem_used=0
mem_total=0
while IFS=":" read -r a b; do
    case $a in
        "MemTotal") mem_total="${b/kB}" ;;
        "MemFree" | "Buffers" | "Cached" | "SReclaimable")
            mem_used="$((mem_used - ${b/kB}))" ;;
        "Shmem") mem_used="$((mem_used + ${b/kB}))" ;;
    esac
done < /proc/meminfo

Ram_Usage="$((mem_used / 1024))"
Ram_Total="$((mem_total / 1024))"

